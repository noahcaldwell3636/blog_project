{
    // add a line in the text editor at 80 charactors to help the writer
    // stay in accordance with pep8 
    "editor.rulers": [80],
    // how much vscode will indent inner directories in its file explorer
    "workbench.tree.indent": 20,
    // disgnates python path
    "python.pythonPath": "virtualenv\\scripts\\python.exe",
    // activates virtual environment when you open up a new terminal in vscode
    "python.terminal.activateEnvInCurrentTerminal": true,
    "workbench.colorCustomizations": {
        "editorGroup.border": "#266c4a",
        "panel.border": "#266c4a",
        "sideBar.border": "#266c4a",
        "statusBar.background": "#194630",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#266c4a",
        "titleBar.activeBackground": "#194630",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#19463099",
        "titleBar.inactiveForeground": "#e7e7e799",
        "sash.hoverBorder": "#266c4a",
        "statusBarItem.remoteBackground": "#194630",
        "statusBarItem.remoteForeground": "#e7e7e7"
    },
    "peacock.color": "#194630",
}